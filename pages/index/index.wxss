@import "../../lib/weui.wxss";

.page-body {
  padding: 20rpx 0;
  background: #fff;
  height: 100%;
}

.page-section {
  margin-bottom: 20rpx;
}

.bg_title {
  height: 80rpx;
  width: 80rpx;
  text-align: center;
}

.title_img {
  height: 80rpx;
  width: 400rpx;
}

.flex_row {
  display: flex;
  flex: row;
}

.border_left_right {
  border-left: 1px solid #d9d9d9;
  border-right: 1px solid #d9d9d9;
}

.imagesize {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.color_black {
  color: #000;
  width: 16%;
  text-align: right;
}

.welcome {
  font-size: 25px;
  text-align: center;
  color: #e70;
}
