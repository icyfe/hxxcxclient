/* pages/reportfrom/fromone/one.js.wxss */

.container {
  width: calc(100%-20px);
  height: 100%;
  background: #fff;
  padding: 10px;
  /* overflow: hidden; */
}

.tip {
  margin-top: 10rpx;
  color: #f00;
  font-size: 24rpx;
  font-weight: 600;
}

.date-section {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.startdate {
  background: #00c777;
  color: #fff;
  padding: 5px 10px;
  border-radius: 8px;
  font-size: 24rpx;
}

.enddate {
  background: #f28475;
  color: #fff;
  padding: 5px 10px;
  border-radius: 8px;
  font-size: 24rpx;
}

.table {
  width: 100%;
  height: auto;
  margin-top: 20rpx;
  border: 1px solid #333;
  border-radius: 10rpx;
  z-index: 999;
}

.table-head-fixed {
  /* width: calc(100% - 40rpx); */
  width: 95%;
  margin: 0 auto;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-right: 1rpx solid #333;
  border-bottom: 1rpx solid #333;
  background: #3367d6;
  border-radius: 6rpx;
  /* padding: 0 20rpx; */
  z-index: 999;
}

.table-head {
  width: calc(100% - 20rpx);
  position: sticky;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-right: 1rpx solid #333;
  border-bottom: 1rpx solid #333;
  background: #3367d6;
  border-radius: 6rpx;
  padding: 0 10rpx;
  z-index: 998;
}

.head-txt {
  width: 20%;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
}

.table-body {
  width: calc(100% - 10rpx);
  height: auto;
  padding: 0 5rpx;
}

.item {
  width: 100%;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #eee;
}

.txt {
  width: 20%;
  color: #333;
  font-size: 24rpx;
  text-align: center;
  border-right: 1px solid #eee;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.total-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  border-bottom: 1px solid #eee;
}

.total-txt {
  background: #3367d6;
  width: 30%;
  color: #fff;
  /* border-radius: 10rpx; */
  font-size: 30rpx;
  text-align: center;
}

.total-number {
  width: 70%;
  font-size: 30rpx;
  text-align: left;
  margin-left: 10rpx;
}

.ff-canvas {
  margin-top: 100rpx;
  width: auto;
  height: 900rpx;
