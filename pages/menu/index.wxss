/**index.wxss**/

page {
  background: #fff;
  padding: 20prx 0;
  /* background:url(https://wx.rtdsoft.com/app/images/desktop/desktopbg1.jpg); background-size:100%; background-repeat:no-repeat; */
}

.springboard-items {
  background: #fff;
}

.container {
  width: calc(100%- 20rpx);
  /* height: 100%; */
  padding: 40rpx 10rpx 40rpx 10rpx;
}

.menu-title {
  font-size: 30rpx;
  font-weight: 600;
}

.bg_title {
  height: 80rpx;
  width: 80rpx;
  text-align: center;
}

.title_img {
  height: 80rpx;
  width: 400rpx;
}

.icon-img {
  width: 50rpx !important;
  height: 50rpx !important;
}

.t-icon-img {
  width: 100rpx !important;
  height: 100rpx !important;
}

.imagesize {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.welcome {
  font-size: 25px;
  text-align: center;
  color: #e70;
}

.title_line {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 18px;
  color: #000;
  padding-left: 5px;
  border-top: 1px solid #fff;
}

.item {
  width: calc(100%-20rpx);
  padding: 0 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 18px;
  color: #000;
  justify-content: flex-start;
  padding-left: 5px;
  border-bottom: 4px solid #f8f8f8;
  margin-top: 20rpx;
}

.wrap {
  width: 25%;
  height:200rpx;
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
  /* justify-content: space-between; */
  align-items: center;
  text-align: center;
}

.iphone-scrollcontainer {
  height: 100%;
  max-width: 640px;
  margin: 0px auto;
  padding-top: 10px;
  overflow: hidden;
}

.prow {
  width: 100%;
  /* height: 100%; */
  border-bottom: 4px solid #f8f8f8;
}

.icon {
  float: left;
  margin: 9px auto;
  width: 24.888888%;
  text-align: center;
}

.ico_txt {
  text-align: center;
  font-family: Georgia, Times, serif;
  font-size: 24rpx;
  font-weight: 600;
  display: inline-block;
  color: #333;
}

.springboard-items {
  width: 100%;
  height: 100%;
  margin-top: 40rpx;
}

.springboard-items image {
  width: 65px;
  height: 65px;
  display: inline-block;
  overflow: hidden;
  border: 0;
}

.springboard-items {
  width: 100%;
  height: 100%;
}
